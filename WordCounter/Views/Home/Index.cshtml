<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="~/css/styles.css">
        <script src="~/js/jquery-3.3.1.js"></script>
        <script src="~/js/scripts.js"></script>
        <title>Word Counter</title>
    </head>
    <body>
        <div class="container">
            <div class="jumbotron">
                <h1>Word Counter</h1>
                <p>Please enter a word and a string of text to begin!</p>
            </div>
            <form method="post" action="/count" id="count">
                <div class="word-inputs">
                    <div class="form-group">
                        <label for="word-input">Word</label>
                        <input type="text" name="word-input" class="form-control">
                    </div>

                </div>
                <span id="add" class="btn btn-default btn-sm">Add another word</span>

                <div class="form-group">
                    <label for="sentence-input">Text string</label>
                    <textarea name="sentence-input" class="form-control" rows="5"></textarea>
                </div>
                <button type="submit" class="btn btn-default count">Count</button>
            </form>
            <div class="output">
                @foreach (var counter in Model)
                {
                    if (@counter.GetMessage() != "")
                    {
                        <div class="panel">
                            <p class="display">@counter.GetMessage()</p>
                        </div>
                    }
                    else if (@counter.GetWord() != "")
                    {
                        <div class="panel">
                            <p class="display">The word "@counter.GetWord()" appears @counter.GetCount() time(s) in this string of words!</p>
                        </div>
                    }
                }


            </div>


        </div>

    </body>
</html>
